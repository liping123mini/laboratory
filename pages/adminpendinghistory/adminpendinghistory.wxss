.mydialog {
	top: 200rpx;
	width: 100%;
	height: 100vh;
	position: fixed;
	z-index: 100000;
	background: rgba(0,0,0,0.6);
}
.mydialog .mybox {
	width: 85%;
	font-size: 30rpx;
	/* height: 500rpx; */
	display: block;
	background: #fff;
	margin: auto;
	position: relative;
	padding: 100rpx 45rpx;
	border-radius: 15rpx;
	margin-top: 216rpx;
	padding-bottom: 150rpx;
	box-sizing: border-box;
}
.mydialog textarea {
	width: 100%;
	height: 200rpx;
	margin-top: 25rpx;
	padding: 15rpx;
	border: 1rpx solid #ccc;
}
.mydialog .mybox .mybtn {
	right: 42rpx;
	bottom: 25rpx;
	position: absolute;
	
}
