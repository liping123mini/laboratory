	padding-top: 20rpx;
	height: auto;
}

.mybtn button {
	color: #fff;
	font-size: 30rpx;
	background: #1cbbb4;
	line-height: 65rpx;
	margin-left:20rpx ;
	border: 1rpx solid #1cbbb4;
}
.mybtn button:last-child {
	color: #fff;
	background: #999;
	border: 1rpx solid #e3e3e3;
}